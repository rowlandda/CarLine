<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CarLineActivity">

    <fragment android:name="com.csce4623.carline.view.CarFragment"
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layoutManager="LinearLayoutManager"
        tools:context=".view.CarFragment"
        tools:listitem="@layout/fragment_car" />

    <fragment android:name="com.csce4623.carline.view.AddCarFragment"
        android:id="@+id/add_car"
        app:layout_constraintTop_toBottomOf="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layoutManager="LinearLayoutManager"
        tools:context=".view.AddCarFragment"
        />

    <Button
        android:id="@+id/switch_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="goToStudent"
        android:text="go_to_student"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>